bindsym $mod+Shift+underscore move container to workspace $WS11;

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3blocks -c $CONFIG/i3blocks.conf
	mode dock
    tray_output primary
	height 40
	tray_padding 8
	font pango:Ubuntu 12
	font pango:Font Awesome
	strip_workspace_numbers yes
	colors {
		background $background
		statusline $paneltext

	    #					Border    BG            Icon 
        focused_workspace	$border   $background   $active
        active_workspace	$border   $background   $active
        inactive_workspace	$border   $background   $inactive
        urgent_workspace	$border   $background   $inactive
	}
}

# Bar signals:
bindsym --release Caps_Lock exec pkill -RTMIN+11 i3blocks
bindsym --release Num_Lock  exec pkill -RTMIN+11 i3blocks


# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id "pactl set-sink-volume 0 +5% && pactl set-sink-mute 0 off && pkill -RTMIN+10 i3blocks"
bindsym XF86AudioLowerVolume exec --no-startup-id "pactl set-sink-volume 0 -5% && pactl set-sink-mute 0 off && pkill -RTMIN+10 i3blocks"
bindsym XF86AudioMute exec --no-startup-id "pactl set-sink-mute 0 toggle && pkill -RTMIN+10 i3blocks"

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

# Touchpad controls
bindsym XF86TouchpadOff exec $CONFIG/toggletouchpadoff.sh # toggle touchpad
bindsym XF86TouchpadOn exec $CONFIG/toggletouchpadon.sh # toggle touchpad

#configure background
exec_always --no-startup-id feh --randomize --bg-scale $HOME/Pictures/Backgrounds/*

#swap caps and escape for better VIMing
exec_always --no-startup-id /usr/bin/setxkbmap -option "caps:swapescape"
exec_always --no-startup-id /usr/bin/setxkbmap -option "altwin:swap_lalt_lwin"

#make i3 windows slightly bigger by hiding edge borders
hide_edge_borders both

#toggling floating windows by using mod+t
bindsym $mod+t floating toggle

#define launcher for chrome, steam
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
	bindsym c exec google-chrome
	bindsym s exec steam
	
    bindsym Escape mode "default"
	bindsym Return mode "default"
}

